<div class="card mb-3">
  <div class="card-body">
    <h5 class="card-title"><%= product.name %></h5>
    <p class="card-text mb-1"><strong>Price:</strong> $<%= number_with_precision(product.price, precision: 2) %></p>
    <p class="card-text mb-2"><strong>Category:</strong> <%= link_to product.category.name, product.category %></p>

    <div>
      <%= link_to "Show", product, class: "btn btn-outline-primary btn-sm" %>
      <%= link_to "Edit", edit_product_path(product), class: "btn btn-outline-secondary btn-sm" %>
      <%= button_to "Delete", product, method: :delete,
                    class: "btn btn-outline-danger btn-sm",
                    form: { class: "d-inline" },
                    data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>
</div>
