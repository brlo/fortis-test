<div class="card">
  <div class="card-header">
    <div class="d-flex justify-content-between align-items-center">
      <h2 class="card-title mb-0">Product Details</h2>
      <div class="btn-group">
        <%= link_to "Edit", edit_product_path(@product), class: "btn btn-outline-primary" %>
        <%= link_to "Back to Products", products_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>
  <div class="card-body">
    <p><strong>Name:</strong> <%= @product.name %></p>
    <p><strong>Price:</strong> $<%= number_with_precision(@product.price, precision: 2) %></p>
    <p><strong>Category:</strong> <%= link_to @product.category.name, @product.category %></p>
  </div>
</div>
